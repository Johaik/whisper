# API Settings
API_TOKEN=dev-token-change-me
API_HOST=0.0.0.0
API_PORT=8000

# Database Settings (REQUIRED)
# For local Docker development:
# DATABASE_URL=postgresql+asyncpg://whisper:whisper@postgres:5432/whisper
# DATABASE_URL_SYNC=postgresql://whisper:whisper@postgres:5432/whisper

# For local development (running outside Docker):
DATABASE_URL=postgresql+asyncpg://whisper:whisper@localhost:5432/whisper
DATABASE_URL_SYNC=postgresql://whisper:whisper@localhost:5432/whisper

# Redis Settings
# For local Docker development:
# REDIS_URL=redis://redis:6379/0
# For local development (running outside Docker):
REDIS_URL=redis://localhost:6379/0

# File Paths
CALLS_DIR=/data/calls
OUTPUT_DIR=/data/outputs

# Whisper Model Settings
MODEL_NAME=ivrit-ai/whisper-large-v3-turbo-ct2
DEVICE=cpu
COMPUTE_TYPE=int8
BEAM_SIZE=5
VAD_FILTER=True
VAD_MIN_SILENCE_MS=500

# Diarization Settings
DIARIZATION_ENABLED=True
DIARIZATION_MAX_DURATION_SEC=600
HUGGINGFACE_TOKEN=hf_your_huggingface_token

# Worker Settings
WORKER_CONCURRENCY=1
TASK_MAX_RETRIES=3
STUCK_PROCESSING_THRESHOLD_SEC=900
HEARTBEAT_INTERVAL_SEC=120

# Watcher Settings
WATCHER_ENABLED=True
WATCHER_POLL_INTERVAL=30
WATCHER_STABLE_SECONDS=10

# Source Sync Settings
SYNC_ENABLED=False
SOURCE_DIR=/data/source
SYNC_BATCH_SIZE=20

# Google Contacts API (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
